{
  "name": "RCVIS",
  "description": "Ranked Choice Voting Visualization",
  "keywords": [
  ],
  "website": "https://www.rcvis.com/",
  "repository": "https://github.com/artoonie/rcvis",
  "logo": "https://rcvis.com/static/visualizer/logo.png",
  "scripts": {
    "build": "./scripts/build.sh",
    "start": "python manage.py compres && python manage.py runserver"
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "hobby-1x"
    }
  },
  "image": "heroku/python",
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "13"
      }
    }
  ],
  "buildpacks": [
    { "url": "heroku/google-chrome" },
    { "url": "heroku/python" }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "python3 manage.py compress && python3 manage.py test"
      },
      "env": {
        "RCVIS_SECRET_KEY": {
          "generator": "secret"
        },
        "RCVIS_DEBUG": true,
        "RCVIS_HOST": "localhost"
      }
    }
  }
}
